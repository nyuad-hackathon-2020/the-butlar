<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF1E6"
    tools:context="com.example.vmac.WatBot.views.HistoryActivity">

    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:src="@drawable/logout"/>

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blacklogo"/>

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:src="@drawable/user"
        android:clickable="true"
        android:onClick="goToProfile"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecycler"
        android:layout_below="@id/logoImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_above="@id/wishListBtn"/>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="History"
        android:fontFamily="@font/montserrat"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:drawableTop="@drawable/back"
        android:drawableTint="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:clickable="true"
        android:onClick="backToInitial"/>

    <Button
        android:id="@+id/wishListBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="WishList"
        android:fontFamily="@font/montserrat"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:drawableTop="@drawable/wishlist"
        android:textSize="14sp"
        android:clickable="true"
        android:onClick="goToWishList"/>

</RelativeLayout>
